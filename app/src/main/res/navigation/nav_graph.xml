<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/repoListFragment"
        android:name="com.apps.samirmisltest.ui.productlist.ProductListFragment"
        android:label="fragment_repo_list"
        tools:layout="@layout/fragment_product_list" >
        <action
            android:id="@+id/action_repoListFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.apps.samirmisltest.ui.productdetail.ProductDetailsFragment"
        android:label="fragment_add_note"
        tools:layout="@layout/fragment_product_details" >
        <argument
            android:name="productId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.apps.samirmisltest.ui.splashscreen.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_repoListFragment"
            app:destination="@id/repoListFragment"
            app:exitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>
